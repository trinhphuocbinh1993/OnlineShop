@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <td>Mã SP</td>
                <td>Tên SP</td>
                <td>Ảnh SP</td>
                <td>Số lượng</td>
                <td>Đơn giá</td>
                <td>Thành tiền</td>
                <td class="text-center">Tùy chọn</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.ID</td>
                    <td>@item.Product.Name</td>
                    <td><img src="@item.Product.Image" width="100" /></td>
                    <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                    <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0") đ</td>
                    <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0")) đ</td>
                    <td class="text-center"><a class="text-danger btn-delete" data-id="@item.Product.ID" href="#"><i class="fa fa-times"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
    <button id="btnContinue" class="btn btn-primary">Tiếp tục mua hàng</button>
    <button id="btnUpdate" class="btn btn-primary">Cập nhật giỏ hàng</button>
    <button id="btnDeleteAll" class="btn btn-primary">Xóa giỏ hàng</button>
    <button id="btnPayment" class="btn btn-primary">Thanh toán</button>

}
else
{
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class=" alert alert-danger">
                Chưa có sản phẩm trong giỏ hàng
            </div>
        </div>
    </div>
}

@section addedBottomScript {
    <script src="~/Assets/client/js/controller/cartController.js"></script>
}
